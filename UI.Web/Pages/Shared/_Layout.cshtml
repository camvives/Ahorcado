@using Ahorcado.Entities
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TP Ágiles 2022 </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="estadisticas-container container">
        <button id="showStatistic" class="btn btn-outline-info" type="button" data-toggle="collapse" data-target="#estadisticas" aria-expanded="false" aria-controls="estadisticas">Mostrar Estadisticas</button>

        <div class="collapse" id="estadisticas">
            <div class="card">
                <div class="card-body">
                    <h5>Partidas Totales: @JuegoAhorcado.GetPartidasTotales()</h5>
                    <small>Partidas Ganadas: @JuegoAhorcado.GetPartidasGanadas()</small>
                    <small>Partidas Perdidas: @JuegoAhorcado.GetPartidasPerdidas()</small>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Grupo 06
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
